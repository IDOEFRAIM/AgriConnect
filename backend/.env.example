# ── AgriConnect — Environment Variables ──────────────────────
# Copy this file to .env and fill in the values.

# ===== APPLICATION =====
DEBUG=false
AUDIO_OUTPUT_DIR=./audio_output

# ===== DATABASE (PostgreSQL) =====
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/agribot_dev

# Docker Compose Postgres credentials
POSTGRES_DB=agribot_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production

# ===== REDIS / CELERY =====
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ===== LLM (Groq) — At least one required =====
AGRICONNECT_APIKEY=gsk_xxx
GROQ_API_KEY=

# ===== AZURE SPEECH (Optional — TTS/STT) =====
AZURE_SPEECH_KEY=
AZURE_SPEECH_KEY_2=
AZURE_REGION=westeurope

# ===== WHATSAPP (Twilio — Optional) =====
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=
